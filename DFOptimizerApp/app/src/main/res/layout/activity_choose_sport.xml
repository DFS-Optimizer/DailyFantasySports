<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".ChooseSport">

    <Switch
        android:id="@+id/mlbSwitch"
        android:layout_width="104dp"
        android:layout_height="0dp"
        android:layout_marginBottom="137dp"
        android:text="MLB"
        android:visibility="visible"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/continueBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nflSwitch" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="71dp"
        android:text="Select a Sport "
        android:textColor="#ffffff"
        android:backgroundTint="#4ab9f5"
        app:layout_constraintBottom_toTopOf="@+id/nbaSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/nbaSwitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:text="NBA"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/nflSwitch"
        app:layout_constraintEnd_toEndOf="@+id/nflSwitch"
        app:layout_constraintStart_toStartOf="@+id/nflSwitch"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Switch
        android:id="@+id/nflSwitch"
        android:layout_width="104dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:text="NFL"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:backgroundTint="#4ab9f5"
        app:layout_constraintBottom_toTopOf="@+id/mlbSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nbaSwitch" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="214dp"
        android:textColor="#333333"
        android:backgroundTint="#4ab9f5"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mlbSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>