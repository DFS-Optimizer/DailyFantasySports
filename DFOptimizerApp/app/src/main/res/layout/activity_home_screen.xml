<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/customizeBtn"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/custom_rounded_corners"
        android:backgroundTint="#4ab9f5"
        android:fontFamily="@font/klaptbold"
        android:text="Create Customized Lineup"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/customizeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NBA Lineup - DraftKings:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="161dp" />

            <Spinner
                android:id="@+id/nba_dk_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" NBA Lineup - FanDuel:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="309dp" />

            <Spinner
                android:id="@+id/nba_fd_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFL Lineup - DraftKings:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="227dp" />

            <Spinner
                android:id="@+id/nfl_dk_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" NFL Lineup - FanDuel:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="309dp" />

            <Spinner
                android:id="@+id/nfl_fd_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" MLB Lineup - DraftKings:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="309dp" />

            <Spinner
                android:id="@+id/mlb_dk_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" MLB Lineup - FanDuel:"
                android:textColor="#4ab9f5"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="309dp" />

            <Spinner
                android:id="@+id/mlb_fd_lineup"
                android:layout_width="410dp"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>